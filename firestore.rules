
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is an admin
    function isAdmin() {
      return request.auth != null && 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true ||
         request.auth.token.email in ["admin@example.com", "owner@emerald.com"]);
    }

    // USERS COLLECTION
    match /users/{userId} {
      // Users can only read their own profile
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Points and Admin status can ONLY be updated by an Admin or a Cloud Function (server-side)
      allow update: if isAdmin();
      
      // Basic profile creation
      allow create: if request.auth != null && request.auth.uid == userId;
      allow delete: if isAdmin();
    }

    // WITHDRAW REQUESTS
    match /withdrawRequests/{requestId} {
      // Users can read their own requests; Admins can read everything
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
      
      // Creation: User must be logged in, the request must be for themselves, 
      // and they must have enough points (verified against user doc)
      allow create: if request.auth != null 
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.status == 'pending'
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.points >= request.resource.data.points;
      
      // Only Admins can approve/reject (update status)
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // ACTIVITY LOGS
    match /activity/{activityId} {
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
      
      // Activities should only be written by the system (Admin role) to prevent cheating
      allow create: if isAdmin(); 
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
  }
}
